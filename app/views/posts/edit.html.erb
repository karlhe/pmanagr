<h1>Editing Post</h1>

<% form_for [@project, @discussion, @post] do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', project_discussion_post_path %> |
<%= link_to 'Back', project_discussion_posts_path %>