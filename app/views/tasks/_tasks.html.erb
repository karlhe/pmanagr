<table>
  <tr>
    <th>Name</th>
    <th>Due By</th>
    <th>Status</th>
    <th colspan="3">Admin</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.name %></td>
    <td><%=h task.due_by %></td>
    <td>
      <% if task.completed_at.present? -%>
        <%= link_to 'Completed', reopen_project_task_path(@project,task), :confirm => 'Reopen task?' %> at <%=h task.completed_at %>
      <% else -%>
        <%= link_to 'Incomplete', complete_project_task_path(@project,task), :confirm => 'Mark task complete?' %>
      <% end -%>
    </td>
    <td><%= link_to 'Show', project_task_path(@project,task) %></td>
    <td><%= link_to 'Edit', edit_project_task_path(@project,task) %></td>
    <td><%= link_to 'Destroy', project_task_path(@project,task), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
