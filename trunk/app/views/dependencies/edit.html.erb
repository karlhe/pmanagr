<% form_for(@dependency) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :task_id %><br />
    <%= f.text_field :task_id %>
  </p>
  <p>
    <%= f.label :prerequisite_id %><br />
    <%= f.text_field :prerequisite_id %>
