<h2>Listing projects</h2>

<% if @projects.empty? %>
  <p>There are no public projects available at the moment.</p>
<%else%>
<table>
  <tr>
    <th>Name</th>
    <th>Desc</th>
    <th>Due</th>
    <th colspan="3">Admin</th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%=h project.name %></td>
    <td><%=h project.desc %></td>
    <td><%=h project.due_by.localtime %></td>
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project_path(project), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%end%>

<br />

<%= link_to 'New project', new_project_path %>